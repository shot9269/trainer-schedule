<div class="container">
<h2 class="page_title">新規登録</h2>
  <div class="signup_area">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field ">
        <%= f.label :name %><br />
        <%= f.text_field :name, class:"text_field" %>
      </div>
      <div class="field ">
        <%= f.label :belonging %><br />
        <%= f.text_field :belonging, class:"text_field" %>
      </div>
      <div class="field ">
        <%= f.label :area %><br />
        <%= f.text_field :area, class:"text_field",placeholder:"活動可能エリアを入力してください" %>
      </div>

      <div class="field ">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text_field" %>
      </div>

      <div class="field ">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"text_field",placeholder:"大文字と小文字を組み合わせてください" %>
      </div>

      <div class="field ">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text_field",placeholder:"パスワードを再入力してください" %>
      </div>

      <div class="actions">
        <%= f.submit "送信",class:"form_submit" %><br>
      </div>
    <% end %>

  </div>
</div>